@model IEnumerable<Product>

@{
    ViewData["Title"]="Index";
}
<h2>Product List</h2>
<br>

<table class="table table-sm table-bordered">
    <thead class="bg-primary text-white">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>İs Approved</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>

        @foreach (var item in Model)
        {
            
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                
                @if (item.isApproved)
                {
                    <span class="badge badge-success">Onaylı</span>
                }
                else
                {
                    <span class="badge badge-danger">Onaysız</span>
                }
                
            </td>

            <td>
                <a  class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">
                    Update
                </a>
            </td>
        </tr>
            
        }

    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create" >
    Create
</a>